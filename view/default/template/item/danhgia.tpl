<li itemprop="review" itemscope
    class="comment byuser comment-author-villatheme bypostauthor even thread-even depth-1"
    id="">

    <div id="" class="comment_container">

        <img alt=''
             src='{icon}'
             srcset='{icon} 2x'
             class='avatar avatar-60 photo' height='60' width='60'/>
        <div class="comment-text">


            <div class="category_ratting">
                <div class="star-rating" title="">
                    {start}
                </div>
            </div>


            <p class="meta">
                <strong itemprop="author">{name}</strong> &ndash;
                <time itemprop="datePublished"
                      datetime="{created}">{created}
                </time>
                :
            </p>

            <div itemprop="description" class="description"><p>{content}</p>
            </div>
        </div>
    </div>
</li><!-- #comment-## -->