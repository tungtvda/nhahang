<div class="item_testimonial">
    <div class="testimonial_content">
        <div class="testimonial-image"><img width="150" height="150"
                                            src="{img}"
                                            class="attachment-thumbnail size-thumbnail wp-post-image"
                                            alt="{name}"
                                            srcset="{img} 150w, {img} 124w, {img} 370w"
                                            sizes="(max-width: 150px) 100vw, 150px"/>
        </div>
      <p style="color: #ffffff !important;">{content}</p>
    </div>
    <div class="testimonial-footer">
        <div class="title-regency"><h5><a href="#"> {name} </a></h5>
            <div class="regency" style="color:#bfb8b9">{job}
            </div>
        </div>
    </div>
</div>